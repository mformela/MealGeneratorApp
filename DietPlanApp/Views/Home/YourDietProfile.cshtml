
@model DietPlanApp.ViewModels.VMWeeklyRecipies
@{
    ViewBag.Title = "YourDietProfile";
}

<h2>Your Meal Generator</h2>
<h3>This is your weekly meal generator. It uses all information you give, count your daily caloric demand</h3>

<table class="table">
    <tr>
        <th>Day Time</th>
        <th>Monday</th>
        <th>Tuesday</th>
        <th>Wednesday</th>
        <th>Thursday</th>
        <th>Friday</th>
        <th>Saturday</th>
        <th>Sunday</th>
    </tr>

    @*morning*@
    <tr>
        <td>Morning</td>
        @foreach (var wr in Model.WeeklyRecipies.Items.Where(t => t.Slot == 1).OrderBy(t => t.Day))
        {
            <th> @wr.RecipeBasicData.Title </th>
        }
    </tr>

    @*morning*@
    <tr>
        <td>Noon</td>
        @foreach (var wr2 in Model.WeeklyRecipies.Items.Where(t => t.Slot == 2).OrderBy(t => t.Day))
        {
            <th> @wr2.RecipeBasicData.Title </th>
        }
    </tr>

    @*morning*@
    <tr>
        <td>Evening</td>
        @foreach (var wr3 in Model.WeeklyRecipies.Items.Where(t => t.Slot == 3).OrderBy(t => t.Day))
        {
            <th> @wr3.RecipeBasicData.Title </th>
        }
    </tr>
</table>

